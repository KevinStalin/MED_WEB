<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <th>MACHINE LEARNIG</th>

    <div id='info_datos'></div>
    <div id='tablas'>
        <table>
            <thead>
                <tr>
                    <th>Predictorios</th>
                </tr>
            </thead>
            <tbody id='contenedor1'>
            </tbody>
        </table>
        <table>
            <thead>
                <tr>
                    <th>Reales</th>
                </tr>
            </thead>
            <tbody id='contenedor2'>
            </tbody>
        </table>
    </div>
    <div id='cont-01'> 
        <table>
            <thead>
                <tr>
                    <th>Enfermedad</th>
                </tr>
            </thead>
            <tbody id='contenedor3'>
            </tbody>
        </table>
        <table>
            <thead>
                <tr>
                    <th>Precision</th>
                </tr>
            </thead>
            <tbody id='contenedor4'>
            </tbody>
        </table>
        <table>
            <thead>
                <tr>
                    <th>Recall</th>
                </tr>
            </thead>
            <tbody id='contenedor5'>
            </tbody>
        </table>
        <table>
            <thead>
                <tr>
                    <th>F-Mesure</th>
                </tr>
            </thead>
            <tbody id='contenedor6'>
            </tbody>
        </table>

    </div>
    <div id='cont_02'>

    </div>



    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script>
        $(() => {
            //var tbody = $('#contenedor_datos');
            $.ajax({
                url: '/python2',
                contentType: 'application/json',
                async: false,
                //data: JSON.stringify({ sintomas: id }),
                success: (respuesta) => {
                    let dta = respuesta.res;
                    console.log("Respuesta-->", dta);
                    console.log(dta.reales.length);
                    console.log(dta.reales[0]);
                    console.log(dta.reales[1]);
                    console.log("Mesure",dta.f_mesure);
                    
                    $('#info_datos').append('Instancias para el training:'+dta.training+' instancias para el test:'+dta.test+'');
                    //------------------------------------
                    dta.reales.forEach((predic) => {
                        $('#contenedor1').append('<tr><td>' + predic + '</td></tr>')
                    });
                    dta.prediccion.forEach((real) => {
                        $('#contenedor2').append('<tr><td>' + real + '</td></tr>')
                    });
                    dta.enfermedadades.forEach((real) => {
                        $('#contenedor3').append('<tr><td>' + real + '</td></tr>')
                    });
                    dta.precision.forEach((real) => {
                        $('#contenedor4').append('<tr><td>' + real + '</td></tr>')
                    });
                    dta.recall.forEach((real) => {
                        $('#contenedor5').append('<tr><td>' + real + '</td></tr>')
                    });
                    dta.f_mesure.forEach((real) => {
                        $('#contenedor6').append('<tr><td>' + real + '</td></tr>')
                    });
                    //------------------------------------
                    $('#cont_02').append('<p>Accuracy: '+dta.accuracy+' </p>');
                    $('#cont_02').append('<p>Total de errores: '+dta.T_erroes+' </p>');

                }
            });
        });
    </script>
</body>

</html>