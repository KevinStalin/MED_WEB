<body class="text-center">
    <br><br><br><br><br>
    <font color="black" face="Comic Sans MS,arial">
        <h1 align="center">Iniciar sesion</h1>
    </font>
    <br><br><br>

    <div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">

        <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

        <div class="carousel-inner" role="listbox">

            <center>


                <form class="form-signin" id="create-sesion">
                    {{!-- <img class="mb-auto" src="/docs/4.5/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72"> --}}

                    <label for="inputEmail" class="sr-only">Correo</label>
                    <input type="email" id="correo" class="form-control-lg" placeholder="Correo"  required autofocus>
                    <br><br>
                    <label for="inputPassword" class="sr-only">Contraseña</label>
                    <input type="password" id="contrasenia" class="form-control-lg" placeholder="Contraseña" required>
                    <br><br>
                    <button class="btn btn-lg btn-primary btn-lg">Iniciar sesion</button>
                    <br><br>
                    <button class="btn btn-lg btn-primary btn-lg"
                        onclick="window.location='/registro'">Registrarse</button>
                </form>
            </center>

        </div>
    </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        $(function () {
            $('#create-sesion').on('submit', function (event) {
                event.preventDefault();
                var correo = $('#correo');
                var contrasenia = $('#contrasenia');
                $.ajax({
                    url: '/logeo',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        correo: correo.val(),
                        contrasenia: contrasenia.val()
                    }),
                    success: function (response) {
                        console.log(response);
                        if (response == "USER_PACIENTE") {
                            window.location = "/"

                        }
                        if (response == "USER_MEDICO") {

                            window.location = "/nuevaE"
                        }
                        if (response == "USER_ADMIN") {


                        }

                    }
                });
            });

        });
    </script>
</body>
