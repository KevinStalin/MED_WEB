{{> header }}
{{> headMed }}
<section id="hero">
    <div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">

        <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

        <div class="carousel-inner" role="listbox">

            <!-- Slide 1 -->
            <div class="carousel-item active" style="background-image: url(assets/img/docs.jpg)">
                <center>
                    <form id="tratamiento">
                        <div class="section-title">
                            <h2>Ingrese Tratamiento</h2>
                        </div>
                        <!--
                        <input type="text" name="name" rows="5" class="form-control" name="tratamiento" placeholder="Tratamiento"
                            data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                        -->
                        <textarea id="des_tratamiento" rows="10" cols="50" placeholder="Ingrese tratamiento" data-rule="minlen:4" data-msg="Please enter at least 4 chars"></textarea>
                        <div class="validate"></div>
                        <br> <br>
                        <div class="text-center">
                            <button type="submit">Guardar</button>
                            </div>
                    </form>
                </center>
            </div>
        </div>
        <input visibility: hidden type="button" id="IDE" value="{{ idEnfermedad }}">    
    </div>
</section>
 <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

 <script>
     $(function(){
         $('#tratamiento').on('submit',function(event){
            event.preventDefault();
            var idee=$('#IDE');
            var tratamiento=$('#des_tratamiento');
            $.ajax({
                url:'/ingresaTratamiento',
                method:'POST',
                contentType:'application/json',
                data: JSON.stringify({ tratamiento:tratamiento.val(),
                                        enfermedad:idee.val() }),
                success: function(response){
                    console.log(response);
                }
            });

        });
     });

</script>

