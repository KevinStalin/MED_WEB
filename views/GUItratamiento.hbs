<script>
    $(function () {
        $('#tratamiento').on('submit', function (event) {
            event.preventDefault();
            var idee = $('#IDE');
            var tratamiento = $('#des_tratamiento');
            $.ajax({
                url: '/ingresaTratamiento',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    tratamiento: tratamiento.val(),
                    enfermedad: idee.val()
                }),
                success: function (response) {
                    console.log(response);
                    alert(response);
                    window.location = "/enfermedad";
                }
            });

        });
    });
</script>

