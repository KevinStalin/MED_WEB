    $(function() {
    $('#get-button').on('click', function() {
        $.ajax({
          url:'/enfermedades',
          contentType:'application/json',
          success:function(response){
            var tbodyEl=$('tbody');
            tbodyEl.html('');

            response.enfermedades.forEach(function(enfer){
              tbodyEl.append('\
              <tr>\
